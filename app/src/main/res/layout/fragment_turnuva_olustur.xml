<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Başlık -->
        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eleme Turnuvası"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal" />

        <!-- Takım Sayısı Seçimi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Takım Sayısı Seçin:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/team_count_radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">
            <RadioButton
                android:id="@+id/radio_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Takım"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/radio_32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32 Takım" />
        </RadioGroup>

        <!-- Oyuncu 1 Takım Seçimi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyuncu 1 Takımları:"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/player1_team_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seç"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player1_team_list"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"/>

        <!-- Oyuncu 2 Takım Seçimi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oyuncu 2 Takımları:"
                android:textSize="16sp"
                android:layout_weight="1"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/player2_team_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seç"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/player2_team_list"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#FFFFFF"
            android:padding="8dp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"/>

        <!-- Oluştur Butonu -->
        <Button
            android:id="@+id/button_create_tournament"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turnuva Oluştur"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>

    </LinearLayout>
</ScrollView>
